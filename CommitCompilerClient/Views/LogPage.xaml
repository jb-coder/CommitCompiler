<Page x:Class="CommitCompiler.Views.LogPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:CommitCompiler.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d"
             Height="560" Width="845"
             Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center" Height="25" TextWrapping="Wrap" Text="Log" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Foreground="White" Grid.Row="0"/>

        <Border Background="#0B37B4" HorizontalAlignment="Center" VerticalAlignment="Stretch" Width="616" Height="500" CornerRadius="5" Grid.Row="1">
            <Border CornerRadius="8" BorderThickness="2" BorderBrush="Gray">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                </ScrollViewer>
            </Border>
        </Border>
    </Grid>
</Page>
